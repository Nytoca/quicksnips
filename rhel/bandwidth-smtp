# Prints the amount of SMTP bandwidth used for each day of the month.

if [ -e /var/log/maillog ]; then for day in `seq 01 31`; do echo -n "`date +%B` $day: "; zgrep -E "`date +%b`space: {1,2}$day " /var/log/maillog* | grep 'relay=localhost' | awk ' $8 ~ /size=/ {print $8}' | awk -F= '{SUM += $2} END {print SUM/1024,"K"}'; done; else echo "/var/log/maillog doesn't exist."; fi
