if [ ! -e /usr/sbin/qmHandle ]; then yum install qmhandle || up2date -i qmhandle; fi; export TEMPFILE=`mktemp`;qmHandle -R > $TEMPFILE && for line in `grep Subject $TEMPFILE | sort | uniq -c | sort -n | tail -n$(($LINES/2)) |awk -F'Subject: ' '{print $2}'|tr " " "-"`;do LINENUMBER=$(($LINENUMBER+1)) export LINENUMBER;echo -e "line:$LINENUMBER\t$line";done;export LINENUMBER=0;echo -n "Exclude with subjects from the search? (comma separated line numbers, eg 9,10):" && read EXCLUDELINES; EXCLUDELINES=$EXCLUDELINES"d" && for subject in `grep Subject $TEMPFILE | sort | uniq -c | sort -n | sed -e "$EXCLUDELINES" | awk -F'Subject: ' '{print $1}'`;do grep -B4 "$subject" $TEMPFILE | egrep "^[0-9]{8}" |awk '{print "qmHandle -m"$1" ;echo ============================================================="}' | sh|egrep "===========================|Received: |To: |From: |Subject: ";done > /home/rack/remote_queue.txt; export EXCLUDELINES=0; rm -f $TEMPFILE; cat /home/rack/remote_queue.txt
