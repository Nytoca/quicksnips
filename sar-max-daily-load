START=( $(ls /var/log/sa/sa[0-9][0-9]) )
for FILE in ${START[@]}; do
    if [ "${FILE}" == "${START[0]}" ]; then
        echo -en "Max Daily Load
Averages\n===============================\n"
    fi
    printf "%s\n%11s%10s%10s%10s%10s%10s\n" "${FILE}" Time runq-sz plist-sz ldavg-1 ldavg-5 ldavg-15
    sar -q -f ${FILE} | sort -nk5 | egrep -v '^(.*CPU.*)$' | egrep '^[0-9]{2}\:[0-9]{2}\:[0-9]{2}.*' | tail -n5 | sort -rnk5
    echo
done
