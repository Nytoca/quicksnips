# Set group permissions on a directory.
# Usage: developergrouppermissions GROUP DIRECTORY

function developergrouppermissions () {
    if [[ -z "$1" || -z "$2" ]]; then
        echo "Usage: developergrouppermissions GROUP DIRECTORY"
    else
        chgrp -R "$1" "$2"
        chmod -R g+w "$2"
        find "$2" -type d -exec chmod g+s '{}' \;
    fi
}
developergrouppermissions   
