# Resets the password for a list of users.  Displays new passwords.
# Usage: batchpass user1 [user2] [...]

function batchpass () { if [ ! -e /usr/bin/mkpasswd ]; then yum install expect || up2date -i expect; fi && for x in $*; do pas=`mkpasswd`; (echo "$x => $pas" >> p); (echo $pas|passwd --stdin $x); done && cat p && rm -f p }; batchpass 
