# Resets the password for a list of users.  Displays new passwords.
# Usage: passwordsbatchreset user1 [user2] [...]

function passwordsbatchreset () {
    if [[ -z "$1" ]]; then
        echo "Usage: batchpass user1 [user2] [...]"
    else
        if [[ ! -e /usr/bin/mkpasswd ]]; then
            yum -y install expect || up2date -i expect
        fi
        for x in $*; do
            pas=`mkpasswd`
            echo "$x => $pas" >> p
            echo $pas|passwd --stdin $x
        done
        cat p && rm -f p
    fi
}
passwordsbatchreset 
