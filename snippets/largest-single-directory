# Finds the largest single directory on a server

function largestdirindir () {
    find $1/* -maxdepth 1 -type d -exec du -s '{}' \; 2>/dev/null|sort -n|tail -n1|awk '{print $2}'
}
function largestsingledir () {
    last=$(largestdirindir $last)
    echo $last
    while [[ -n $last ]]; do
        last=$(largestdirindir $last)
        echo $last
    done
}
largestsingledir
