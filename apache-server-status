cat > /etc/httpd/conf.d/serverstatus.conf <<EOF && httpd -t && apachectl graceful && service httpd status && echo -e 'If server-status page does not display, you may need to add the following\nto any mod_rewrite rules in their .htaccess file:\n"RewriteCond %{REQUEST_URI} !=/server-status"'
ExtendedStatus On
<Location /server-status>
    SetHandler server-status
    Order deny,allow
    Deny from all
    Allow from 64.39.0.68 localhost
</Location>
EOF
