#!/bin/bash

usage="Usage: ./quickapropos [-l] SEARCHTERM
       ./quickapropos -a

Optional arguments.
  -a  Show a list of all quicksnips.
  -l  Do not trim output to the terminal width."

while getopts "alh" options; do
    case $options in
	a ) allsnips=1;;
	l ) longdesc=1;;
        h ) echo "$usage"
            exit 1;;
        * ) echo "$usage"
            exit 1;;
    esac
done

# Shift the positional parameters to the left by the number of options.
shift $(($OPTIND - 1))

width=$(tput cols)
let width=width-30 # Room for snippet name
let dotdotdot=width-3

function printsnip () {
    if [[ -n $longdesc ]]; then
	printf "%-27s - %s\n" `basename $file` "$(head -n1 $1|egrep '^#'|sed 's/# *//')"
    else
	if [[ $( head -n1 $1 |egrep '^#'|sed 's/# *//'|wc -c ) -ge $width ]]; then
	    printf "%-27s - %s...\n" `basename $file` "$(head -n1 $1|egrep '^#'|sed 's/# *//'|cut -c1-$dotdotdot)"
	else
	    printf "%-27s - %s\n" `basename $file` "$(head -n1 $1|egrep '^#'|sed 's/# *//')"
	fi
    fi
}

if [[ $1 ]]; then
    for file in $( grep -Eirl $1 ~/quicksnips/snippets|egrep -v "/\.|~$" ); do
	printsnip $file
    done | sort
elif [[ $allsnips ]]; then
    for file in $( find ~/quicksnips/snippets -type f|egrep -v "/\.|~$" ); do
	printsnip $file
    done | sort
else
    echo "apropos what?"
fi
